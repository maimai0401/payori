<div class="form">
  <div class="form-group">
    <h2>新規登録</h2>
    <%= form_with model: @user, url: user_registration_path, class: 'new_user', local: true do |f| %>
      <%= render 'shared/error_messages', model: f.object %>

      <div class="field">
        <label class="field-text">ニックネーム</label><br />
        <%= f.text_field :nickname, placeholder:"例) hogehoge" %>
      </div>

      <div class="field">
        <label class="field-text">メールアドレス</label><br />
        <%= f.email_field :email, placeholder:"PC・携帯どちらでも可" %>
      </div>

      <div class="field">
        <label class="field-text">パスワード</label><br />
        <%= f.password_field :password, placeholder:"6文字以上の半角英数字" %>
      </div>

      <div class="field">
        <label class="field-text">パスワード（確認）</label><br />
        <%= f.password_field :password_confirmation, placeholder:"同じパスワードを入力して下さい" %>
      </div>

    <%= f.submit "新規登録" , class: 'form-submit'%>
    <% end %>
  </div>
</div>