<div class="form">
  <div class="form-group">
    <div class="form-name">住所</div>
    <%= form_with url: profiles_path , class: 'new-user', local: true do |f| %>
      <%= render 'shared/error_messages', model: @profile %>

      <div class="field">
        <label class="text">郵便番号</label><br />
        <%= f.text_field :postal_code, placeholder:"例) 000-0000" %>
      </div>

      <div class="field">
        <label class="text">都道府県</label><br />
        <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, {} %>
      </div>

      <div class="field">
        <label class="text">市区町村</label><br />
        <%= f.text_field :city, placeholder:"福岡市中央区" %>
      </div>

      <div class="field">
        <label class="text">番地</label><br />
        <%= f.text_field :address, placeholder:"0-00" %>
      </div>

      <div class="field">
        <label class="text">建物</label><br />
        <%= f.text_field :building_name, placeholder:"ハイミルクチョコ美味い" %>
      </div>

    <div class="form-name">プロフィール</div>
      <div class="field">
        <label class="text">姓</label><br />
        <%= f.text_field :first_name, placeholder:"例) 田中" %>
      </div>

      <div class="field">
        <label class="text">名</label><br />
        <%= f.text_field :last_name, placeholder:"例) 太郎" %>
      </div>

      <div class="field">
        <label class="text">姓(フリガナ)</label><br />
        <%= f.text_field :first_name_kana, placeholder:"例) タナカ" %>
      </div>

      <div class="field">
        <label class="text">名(フリガナ)</label><br />
        <%= f.text_field :last_name_kana, placeholder:"例) タロウ" %>
      </div>

      <div class="field">
        <label class="text">生年月日</label><br />
        <%= f.text_field :birthday, placeholder:"2020-01-01" %>
      </div>

      <div class="field">
        <label class="text">自己紹介</label><br />
        <%= f.text_field :introduction, placeholder:"世界一可愛い犬" %>
      </div>

    <%= f.submit "プロフィール登録" , class: 'list form-submit'%>
    <% end %>
  </div>
</div>